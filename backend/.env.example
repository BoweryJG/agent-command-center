# Server Configuration
# Port for the backend server
PORT=3001

# Node environment: development, staging, or production
NODE_ENV=production

# Supabase Configuration
# Your Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (safe for browser)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service key (server-side only, keep secret!)
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://agent-command-center.netlify.app,https://your-custom-domain.com

# Frontend URL
FRONTEND_URL=https://agent-command-center.netlify.app

# External Platform URLs (for agent synchronization)
AGENT_BACKEND_URL=https://agentbackend-2932.onrender.com
REPCONNECT1_BACKEND_URL=https://osbackend-zl1h.onrender.com
PEDRO_BACKEND_URL=https://pedrobackend.onrender.com

# This Backend's Public URL
AGENT_COMMAND_CENTER_URL=https://agent-command-center-backend.onrender.com

# API Configuration
# Request timeout in milliseconds
API_TIMEOUT=30000

# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Rate Limiting Configuration
# Time window for rate limiting in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per IP within the time window
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log format: json or simple
LOG_FORMAT=json

# WebSocket Configuration (if needed)
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_RECONNECT_ATTEMPTS=5

# Security Headers
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Session Configuration (if using sessions)
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# Optional: Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here